<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:icons="clr-namespace:Material.Dialog.Icons">
  <Style Selector="icons|DialogIcon">
    <Setter Property="Height" Value="16" />
    <Setter Property="Width" Value="16" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate>
          <Viewbox Stretch="Fill"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
            <Path Name="PATH_DialogIconVectorPath" Data="{TemplateBinding Data}" Width="{Binding ElementName=PATH_DialogIconVectorPath, Path=Bounds.Height}"
                  Fill="{TemplateBinding Foreground}" />
          </Viewbox>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</Styles>
